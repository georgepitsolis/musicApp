<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2B3437"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pop_image_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/category"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pop"
                style="@style/categoryStyle"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/pop_image_view"
                android:layout_alignBottom="@+id/pop_image_view"
                android:gravity="center"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/country_image_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/category"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/country"
                style="@style/categoryStyle"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/country_image_view"
                android:layout_alignBottom="@+id/country_image_view"
                android:gravity="center"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/soul_image_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/category"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/soul"
                style="@style/categoryStyle"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/soul_image_view"
                android:layout_alignBottom="@+id/soul_image_view"
                android:gravity="center"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/jazz_image_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="50dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/category"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jazz"
                style="@style/categoryStyle"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@+id/jazz_image_view"
                android:layout_alignBottom="@+id/jazz_image_view"
                android:gravity="center"
                />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>